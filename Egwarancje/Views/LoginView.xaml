<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Egwarancje.Views.LoginView"
             xmlns:vm="clr-namespace:Egwarancje.ViewModels"
             xmlns:auth="clr-namespace:Egwarancje.ViewModels.Auth"
             x:DataType="auth:LoginViewModel"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             Title="Login"
             BackgroundColor="#1E1E1E">

    <ScrollView>
        <VerticalStackLayout Spacing="25"
                             Padding="30, 100"
                             VerticalOptions="Center">
            <Frame Padding="12, 5"
                   VerticalOptions="Start"
                   BackgroundColor="Transparent"
                   BorderColor="Transparent">
                <Label Text="E-Gwarancje"
                       HorizontalOptions="Center"
                       TextColor="#FFFFFF"
                       FontSize="40"
                       FontAttributes="Bold"
                       CharacterSpacing="1" />
            </Frame>

            <Frame Padding="12, 5"
                   CornerRadius="10"
                   BackgroundColor="#292929"
                   BorderColor="#6B5B95">
                <Entry Placeholder="Email"
                       Text="{Binding Email}"
                       BackgroundColor="Transparent"
                       PlaceholderColor="Gray"
                       TextColor="White" />
            </Frame>

            <Frame Padding="12, 5"
                   CornerRadius="10"
                   BackgroundColor="#292929"
                   BorderColor="#6B5B95">
                <Entry Placeholder="Password"
                       IsPassword="True"
                       Text="{Binding Password}"
                       BackgroundColor="Transparent"
                       PlaceholderColor="Gray"
                       TextColor="White" />
            </Frame>

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Margin="0, -20, 0, 0">
                <Label Text="Zapomniałeś hasła?"
                       TextColor="White"
                       VerticalOptions="Center" />
                <Frame BackgroundColor="Transparent"
                       Padding="5"
                       BorderColor="Transparent"
                       HasShadow="False">
                    <Label Text="Reset hasła"
                           TextColor="#6B5B95"
                           TextDecorations="Underline"
                           FontSize="15"
                           FontAttributes="Bold"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ResetPasswordCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </Frame>
            </StackLayout>

            <!--<StackLayout Orientation="Horizontal"
                         Margin="0, -10, 0, 0">
                <CheckBox IsChecked="{Binding RememberMe}"
                          Color="White" />
                <Label Text="Zapamiętaj mnie"
                       TextColor="White"
                       VerticalOptions="Center"
                       Margin="10, 0, 0, 0" />
            </StackLayout>-->

            <Button Text="Zaloguj się"
                    Command="{Binding LoginCommand}"
                    FontSize="Medium"
                    BackgroundColor="#6B5B95"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="50"
                    Margin="0, 20, 0, 0" />

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Margin="0, 40, 0, 0">
                <Label Text="Nie posiadasz konta?"
                       TextColor="#EEE"
                       VerticalOptions="Center" />
                <Frame BackgroundColor="Transparent"
                       Padding="5"
                       BorderColor="Transparent"
                       HasShadow="False">
                    <Label Text="Zarejestruj się"
                           TextColor="#6B5B95"
                           TextDecorations="Underline"
                           FontAttributes="Bold"
                           FontSize="15"
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding RegisterCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </Frame>
            </StackLayout>

            <Label x:Name="versionLabel"
                   Text="v1.0.0"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0, 40, 0, 0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
