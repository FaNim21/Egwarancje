<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  x:Class="Egwarancje.Views.WarrantyDetailsView"
                  xmlns:vm="clr-namespace:Egwarancje.ViewModels"
                  xmlns:models="clr-namespace:EgwarancjeDbLibrary.Models;assembly=EgwarancjeDbLibrary"
                  x:DataType="vm:WarrantyDetailsViewModel"
                  Title="WarrantyDetailsView"
                  BackgroundColor="#80000000"
                  CloseWhenBackgroundIsClicked="True">
    <VerticalStackLayout WidthRequest="-1"
                         HeightRequest="500"
                         VerticalOptions="End"
                         BackgroundColor="DimGray">
        <CollectionView ItemsSource="{Binding WarrantySpecs}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:WarrantySpec">
                    <Frame Padding="10"
                           BackgroundColor="#292929"
                           CornerRadius="20"
                           HasShadow="True"
                           BorderColor="White">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WarrantyDetailsViewModel}}, Path=ShowSpecCommand}"
                                                  CommandParameter="{Binding .}"
                                                  NumberOfTapsRequired="1" />
                        </Frame.GestureRecognizers>
                        <HorizontalStackLayout>
                            <Label Text="{Binding OrderSpec.Name}"
                                   TextColor="White" />
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</mopups:PopupPage>