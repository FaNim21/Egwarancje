<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  x:Class="Egwarancje.Views.WarrantyDetailsView"
                  xmlns:vm="clr-namespace:Egwarancje.ViewModels"
                  xmlns:models="clr-namespace:EgwarancjeDbLibrary.Models;assembly=EgwarancjeDbLibrary"
                  x:DataType="vm:WarrantyDetailsViewModel"
                  Title="WarrantyDetailsView"
                  BackgroundColor="#80000000"
                  CloseWhenBackgroundIsClicked="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="500" />
        </Grid.RowDefinitions>

        <Border Grid.Row="1"
                BackgroundColor="#292929"
                StrokeShape="RoundRectangle 30,30,30,30"
                StrokeThickness="0"
                WidthRequest="400"
                HeightRequest="500"
                Margin="20,2,20,20">
            <Grid Padding="20">
                <CollectionView ItemsSource="{Binding WarrantySpecs}"
                                VerticalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:WarrantySpecDetail">
                            <Frame Padding="10"
                                   BackgroundColor="#1E1E1E"
                                   CornerRadius="20"
                                   HasShadow="True"
                                   BorderColor="White"
                                   Margin="5,10">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WarrantyDetailsViewModel}}, Path=ShowDetailsCommand}"
                                                          CommandParameter="{Binding .}"
                                                          NumberOfTapsRequired="1" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout>
                                    <Label Text="{Binding Spec.OrderSpec.Name}"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           FontSize="Medium" />
                                    <StackLayout IsVisible="{Binding IsVisible}"
                                                 Margin="10,0,0,0">
                                        <Label Text="{Binding Spec.Comments}"
                                               TextColor="LightGray"
                                               FontSize="Small" />
                                        <CollectionView ItemsSource="{Binding Attachments}"
                                                        Margin="0,10,0,0">
                                            <CollectionView.ItemsLayout>
                                                <LinearItemsLayout Orientation="Horizontal" />
                                            </CollectionView.ItemsLayout>
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate x:DataType="vm:WarrantySpecAttachmentViewModel">
                                                    <Frame Padding="5"
                                                           BackgroundColor="#3E3E3E"
                                                           CornerRadius="10"
                                                           Margin="5">
                                                        <Image Source="{Binding Image}"
                                                               WidthRequest="150"
                                                               HeightRequest="150"
                                                               Aspect="AspectFill" />
                                                    </Frame>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Text="Zamknij"
                        Command="{Binding CloseCommand}"
                        BackgroundColor="#6B5B95"
                        HorizontalOptions="Center"
                        VerticalOptions="End"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="150" />
            </Grid>
        </Border>
    </Grid>
</mopups:PopupPage>
