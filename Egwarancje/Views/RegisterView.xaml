<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Egwarancje.Views.RegisterView"
             xmlns:vm="clr-namespace:Egwarancje.ViewModels"
             x:DataType="vm:RegisterViewModel"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             Title="Register"
             BackgroundColor="#1E1E1E">

    <StackLayout Padding="20">

        <Label Text="Tworzenie konta"
               HorizontalOptions="Start" 
               TextColor="#FFFFFF"
               FontSize="30"
               Margin="0, 20"/>

        <Entry Placeholder="Imię i nazwisko"
                Text="{Binding Name, Mode=TwoWay}" 
                Keyboard="Text"
                BackgroundColor="#333333"
                TextColor="#FFFFFF"
                Margin="0,10"/>


        <Entry Placeholder="Email"
               Text="{Binding Email, Mode=TwoWay}" 
               Keyboard="Email"
               BackgroundColor="#333333"
               TextColor="#FFFFFF"
               Margin="0,10"/>

        <Entry Placeholder="Numer telefonu"
               Text="{Binding PhoneNumber, Mode=TwoWay}" 
               Keyboard="Telephone"
               BackgroundColor="#333333"
               TextColor="#FFFFFF"
               Margin="0,10"/>

        <Entry Placeholder="Hasło"
               Text="{Binding Password, Mode=TwoWay}" 
               IsPassword="True"
               BackgroundColor="#333333"
               TextColor="#FFFFFF"
               Margin="0,10"/>

        <Entry Placeholder="Powtórz hasło"
               Text="{Binding PasswordAgain, Mode=TwoWay}" 
               IsPassword="True"
               BackgroundColor="#333333"
               TextColor="#FFFFFF"
               Margin="0,10"/>

        <Button Text="Stwórz konto"
                BackgroundColor="#6B5B95"
                TextColor="#EEE"
                Command="{Binding FinalizeRegisterCommand}"
                Margin="0,20,0,0"/>

        <Button Text="Powrót"
                BackgroundColor="#6B5B95"
                Command="{Binding BackCommand}" 
                Margin="0,10"/>

        <Label Text="Tworząc konto lub podpisując umowę, wyrażasz zgodę na nasz Regulamin."
               VerticalOptions="CenterAndExpand"
               HorizontalTextAlignment="Center"
               TextColor="#FFFFFF"
               FontSize="Small"
               Margin="0, 20"/>

    </StackLayout>
</ContentPage>
